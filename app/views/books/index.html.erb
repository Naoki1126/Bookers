<h1>Books</h1>
<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Body</th>
			<th colspan="3"></th>
		</tr>
	</thead>
	<tbody>
	<% @books.each do |book| %>
	<tr>
	<td class="book-title"><%= book.title %></td>
	<td class="book-body"><%= book.body %></td>
	<td class="book-show"><%= link_to "Show", book_path(book) %></td>
	<td class="book-edit"><%= link_to "Edit",edit_book_path(book) %></td>
	<td class="book-Destroy"><%= link_to "削除", book_path(book), method: :delete %></td>
</tr>
<% end %>
	</tbody>
</table>

	<h3>New book</h3>

<% if @book.errors.any? %>
  <div id="error_explanation">
    <h2><%= @book.errors.count %>件のエラーがあります。</h2>

    <ul>
    <% @book.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<%= form_for(@book) do |f| %>

	<p>Title</p>
	<%= f.text_field :title %>

	<p>Body</p>
	<%= f.text_area :body %>
	<br>
	
	<%= f.submit 'Create Book' %>
<% end %>
